<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter Data"
        android:background="@drawable/bg_edt"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_save_to_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save in Shared Preference"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_get_data_from_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Data"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_data_from_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:hint="Data 1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_save_to_encrypted_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save in Encrypted Shared Preference"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_get_data_from_encrypted_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Data"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_data_from_encrypted_prefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:hint="Data 2"
        tools:ignore="HardcodedText" />

</LinearLayout>